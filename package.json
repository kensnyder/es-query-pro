{
  "name": "es-query-pro",
  "version": "3.0.0",
  "description": "Simple and powerful ElasticSearch query builder and index manager",
  "type": "module",
  "engines": {
    "bun": ">=1.2.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "sideEffects": false,
  "keywords": [
    "ElasticSearch",
    "es",
    "query",
    "query builder",
    "es query builder",
    "Elasticsearch query builder"
  ],
  "scripts": {
    "test": "bun test",
    "test-watch": "bun test --watch",
    "coverage": "bun test --coverage",
    "coverage-lcov": "bun test --coverage --coverage-reporter=lcov",
    "lint": "biome lint .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "build": "bun run build:clean && bun run build:dts && bun run build:esm && bun run build:cjs",
    "build:clean": "rm -Rf dist/ && mkdir dist && touch dist/.gitkeep",
    "build:dts": "yes | bunx dts-bundle-generator --project tsconfig.bundle-generator.json -o dist/index.d.ts ./index.ts",
    "build:esm": "bun build ./index.ts --bundle --platform=node --format=esm --packages=external --outfile=dist/index.mjs",
    "build:cjs": "bun build ./index.ts --bundle --platform=node --format=cjs --packages=external --outfile=dist/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kensnyder/es-query-pro.git"
  },
  "author": "Ken Snyder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kensnyder/es-query-pro/issues"
  },
  "homepage": "https://github.com/kensnyder/es-query-pro#readme",
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "bun-types": "1.2.20",
    "type-fest": "4.41.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@elastic/elasticsearch": "9.1.1"
  }
}
